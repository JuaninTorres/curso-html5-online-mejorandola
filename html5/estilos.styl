// Funciones
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
transition()
    -webkit-transition arguments
    -moz-transition arguments
    transition arguments
transform()
    -webkit-transform arguments
    -moz-transform arguments
    transform arguments

// Asignaciones
amarillo = #EEA024
azul =  #166CEB
blanco = #DCDCDC
negro = #121212
rojo = #9F001C
verde = #6CB944

// Comienza lo bueno
@font-face
    font-family 'Cvanderoso'
    src url('pincoyablack-webfont.eot')
    src url('pincoyablack-webfont.eot?#iefix') format('embedded-opentype'),url('pincoyablack-webfont.woff') format('woff'), url('pincoyablack-webfont.ttf') format('truetype'), url('pincoyablack-webfont.svg#PincoyablackBlack') format('svg')
    font-weight normal
    font-style normal
body
    background #222
    color #EEE
    font-family 'Open Sans',Arial
    font-size 16px
    text-align center
header
    background url("logo.png") no-repeat 98% center, url("fondo.png")
    background-size 130px, 100px 100px
    margin 0 0 1em 0
    padding 0.5em 0
    width 100%
header h1
    font-family 'Cvanderoso'
    font-size 3em
    margin 0
    text-shadow rgba(0,0,0,0.8) 5px 5px 10px
header h2
    margin 0
    font-weight normal
    text-shadow rgba(0,0,0,0.75) 2px 2px 5px
nav
    background rgba(60,60,180,0.8)
    bottom 0
    color #EEE
    font-size 1.5em
    left 0
    padding 1em 0
    position fixed
    width 100%
nav ul
    list-style none
    padding 0
    margin 0
nav li
    display: inline-block
nav li a
    background #D23D15
    border-radius(0.5em)
    color white
    display inline-block
    margin 0 1em 0 0
    padding 0.5em 1em
    text-decoration none
    transition(all 0.5s ease)
nav li a:hover
    background #fff
    color black
    transform(scale(1.2) rotate(-5deg))
#cochecito
    background white
    color #222
    text-align left
    width 50%
#cochecito figcaption
    margin 1em
#cochecito img
    width 100%
#cochecito, #historia
    display inline-block
    vertical-align top
#historia
    background rgba(0,0,0,0.6)
    border-radius(0.5em)
    box-shadow rgba(0,0,0,0.5) 5px 5px 10px
    margin 0 2% 6em 1em
    padding 1em
    text-align justify
    text-shadow rgba(0,0,0,0.75) 2px 2px 5px
    transition(all 0.5s ease)
    width 40%
#personalizacion
    background rgba(0,0,0,0.8)
    border-radius(0.5em)
    box-shadow rgba(255,255,255,0.4) 5px 5px 10px inset
    display inline-block
    height 0
    margin 0 0 6em 2%
    opacity 0
    overflow hidden
    padding 1em 1em 0
    transition(all 0.5s ease)
    vertical-align top
    width 0
#personalizacion article
    background rgba(255,255,255,0.9)
    border-radius(0.5em)
    color #333
    margin 0 0 1em 0
    padding 0.5em
#personalizacion h2
    margin-top 0
#personalizacion #color div
    border 3px solid #ccc
    cursor pointer
    display inline-block
    height 3em
    margin 0.5em 1%
    opacity 0.7
    transition(all 0.5s ease)
    vertical-align top
    width 27%
#personalizacion #color div:hover
    border 4px solid #000
    opacity 1
    transform(scale(1.2))
#personalizacion #color #amarillo
    background amarillo
#personalizacion #color #azul
    background azul
#personalizacion #color #blanco
    background blanco
#personalizacion #color #negro
    background negro
#personalizacion #color #rojo
    background rojo
#personalizacion #color #verde
    background verde
#personalizacion #llantas figure:hover img
    transform(rotate(360deg))
#personalizacion #llantas figure, #personalizacion #techo figure
    box-shadow rgba(0,0,0,0.2) 0px 0px 1em
    cursor pointer
    display inline-block
    margin 0 2% 1em
    padding 1%
    vertical-align top
    width 40%
#personalizacion #llantas figure img, #personalizacion #techo figure img
    transition(all 1s ease)
    max-width 100%